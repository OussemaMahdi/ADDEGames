{% block _sce_userbundle_jen_missions_entry_widget %}
	<div class="col-xs-12">
		<div class="box-body">
			<div class="form-group">
				{{ form_label(form.titre) }}
				{{ form_widget(form.titre, { 'attr': {'placeholder' : 'Titre', 'readonly' : 'true'}} ) }}
				{{ form_errors(form.titre) }}
			</div>
			<div class="form-group">
				{{ form_label(form.contexteScenaristique) }}
				{{ form_widget(form.contexteScenaristique, { 'attr': {'placeholder' : 'Contexte Scenaristique'} }) }}
				{{ form_errors(form.contexteScenaristique) }}
			</div>
			<div class="form-group">
				{{ form_label(form.descriptif) }}
				{{ form_widget(form.descriptif, { 'attr': {'placeholder' : 'Descriptif'} }) }}
				{{ form_errors(form.descriptif) }}
			</div>
			<div class="form-group">
				{{ form_label(form.ludification) }}
				{{ form_widget(form.ludification, { 'attr': {'placeholder' : 'Ludification'} }) }}
				{{ form_errors(form.ludification) }}
			</div>
			<div class="form-group">
				{{ form_label(form.authenticite) }}
				{{ form_widget(form.authenticite, { 'attr': {'placeholder' : 'Authenticite'} }) }}
				{{ form_errors(form.authenticite) }}
			</div>
			<div class="form-group">
				{{ form_label(form.immersion) }}
				{{ form_widget(form.immersion, { 'attr': {'placeholder' : 'Immersion'} }) }}
				{{ form_errors(form.immersion) }}
			</div>
			<div class="form-group">
					{{ form_widget(form.images)}}
					{{ form_errors(form.images) }}
			</div>
			<div class="form-group">
				{{ form_rest(form) }}
			</div>
		</div>
		<div class="box-footer">
			<button class="btn btn-primary nextBtn" type="button" >Suivant</button>
		</div>
	</div>
{% endblock %}

