{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6">
<!-- general form elements -->
<div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">User edit</h3>
    </div>
    {{ form_start(edit_form, {'method': 'post', 'action': path('user_new'), 'attr': {'class': 'user_new'}}) }}
    <div class="form-group has-feedback">
        {{ form_widget(edit_form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
        {{ form_errors(edit_form.username) }}
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        {{ form_widget(edit_form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'|trans } }) }}
        {{ form_errors(edit_form.nom) }}
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        {{ form_widget(edit_form.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prenom'|trans } }) }}
        {{ form_errors(edit_form.prenom) }}
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div style="visibility: hidden">
        {{ form_rest(edit_form, {'display': 'hidden'}) }}
    </div>
    <!-- /.col -->
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Valider</button>
    </div>
    <!-- /.col -->
    {{ form_end(edit_form) }}
</div>
    <a href="{{ path('backoffice_homepage') }}">Revenir Ã  la liste</a>
</div>
{% endblock %}